<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <!-- Empty state: Get config from Telegram bot -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_spacing_dp16"
        android:visibility="gone"
        style="@style/Widget.Material3.CardView.Outlined">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_spacing_dp16"
            android:gravity="center">

            <!-- Telegram icon -->
            <ImageView
                android:id="@+id/iv_telegram_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_telegram"
                android:contentDescription="@string/empty_state_telegram_title" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_empty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_spacing_dp16"
                android:text="@string/empty_state_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_empty_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/empty_state_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:gravity="center"
                android:alpha="0.7" />

            <!-- Telegram button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_telegram_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_spacing_dp16"
                android:text="@string/empty_state_telegram_button"
                android:textAllCaps="false"
                app:icon="@drawable/ic_telegram"
                app:iconGravity="start" />

            <!-- Alternative: manual add hint -->
            <TextView
                android:id="@+id/tv_manual_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_spacing_dp16"
                android:text="@string/empty_state_manual_hint"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:gravity="center"
                android:alpha="0.5" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Original footer placeholder (kept for compatibility) -->
    <LinearLayout
        android:id="@+id/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/padding_spacing_dp16"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Tooltip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
